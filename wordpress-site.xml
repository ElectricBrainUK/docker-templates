<?xml version="1.0" encoding="utf-8"?>
<Container>
<Name>Wordpress-Site</Name>
<Beta>False</Beta>
<Changes>
</Changes>
<Category>Productivity:</Category>
<Overview>Wordpress</Overview>
<Support>Wordpress</Support>
<Description>Just a template for Wordpress Sites</Description>
<Registry>https://hub.docker.com/_/wordpress/</Registry>
<Repository>wordpress</Repository>
<BindTime>true</BindTime>
<Privileged>false</Privileged>
<Networking>
<Mode>bridge</Mode>
<Publish>
<Port>
<HostPort>3005</HostPort>
<ContainerPort>80</ContainerPort>
<Protocol>tcp</Protocol>
</Port>
</Publish>
</Networking>
<Environment>
<Variable>
<Name>WORDPRESS_DB_HOST</Name>
<Value>192.168.5.210:3306</Value>
</Variable>
<Variable>
<Name>WORDPRESS_DB_USER</Name>
<Value>wordpress</Value>
</Variable>
<Variable>
<Name>WORDPRESS_DB_PASSWORD</Name>
<Value>wordpress</Value>
</Variable>
<Variable>
<Name>WORDPRESS_DB_NAME</Name>
<Value>wordpress</Value>
</Variable>
</Environment>
<Data>
<Volume>
<HostDir></HostDir>
<ContainerDir>/var/www</ContainerDir>
<Mode>rw</Mode>
</Volume>
</Data>
<WebUI>http://[IP]:[PORT:3005]</WebUI>
<Banner></Banner>
<Icon></Icon>
</Container>
